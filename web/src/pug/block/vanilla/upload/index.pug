div
  div(plug="config")
    div(ld="button")
      span Upload
      input(type="file",ld="input")
  style(type="text/css"): :stylus
    [ld=button]
      cursor: pointer
      width: 100%
      height: 2em
      border: 1px solid #ccc
      border-radius: .25em
      display: flex
      justify-content: center
      align-items: center
      position: relative
      input
        cursor: pointer
        width: 100%
        height: 100%
        position: absolute
        opacity: 0.001
        z-index: 1
        top: 0
        left: 0

    ::-webkit-file-upload-button
      cursor: pointer
      height: 100%
      border: 0



  script(type="@plotdb/block"): include:lsc index.ls

