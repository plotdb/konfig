div
  div(plug="config")
    .btn.btn-outline-secondary.d-block(ld="button")
      span Upload
      input(type="file",ld="input")
  style(type="text/css"): :stylus
    [ld=button]
      position: relative
      input
        cursor: pointer
        width: 100%
        height: 100%
        position: absolute
        opacity: 0.001
        z-index: 1
        top: 0
        left: 0
    ::-webkit-file-upload-button
      cursor: pointer
      height: 100%
      border: 0
    .btn { font-size: 1em }
  script(type="@plotdb/block"): include:lsc index.ls

